{pre_hooks, [{"(linux|darwin)", compile, "make compile_nif USE_BORINGSSL=1"}]}.
{post_hooks, [{"(linux|darwin)", clean, "make clean_nif"}]}.

{erl_opts, [
    debug_info
]}.

{deps, [
    {xxhash, ".*", {git, "https://github.com/pierreis/erlang-xxhash.git", "9b2f35040395f590524ebeccfa65dd52adebbd60"}},
    {ranch, ".*", {git, "https://github.com/ninenines/ranch.git", {tag, "1.3.0"}}}
]}.
