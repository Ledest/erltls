{pre_hooks, [{"(linux|darwin)", compile, "make V=0 -C c_src -j 8"}]}.
{post_hooks, [{"(linux|darwin)", clean, "make -C c_src clean"}]}.

{erl_opts, [
    debug_info
]}.

{deps, [
    {xxhash, ".*", {git, "https://github.com/pierreis/erlang-xxhash.git", "9b2f35040395f590524ebeccfa65dd52adebbd60"}}
]}.
